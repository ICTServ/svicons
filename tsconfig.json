{
	"compilerOptions": {
	  "target": "es6",
	  "module": "es2020",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "moduleResolution": "node",
	  "allowJs": true,
	  "sourceMap": true,
	  "lib": ["es2020", "dom"],
	  "types": ["svelte"],
	  "isolatedModules": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }
  
  